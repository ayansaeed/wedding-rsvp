<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div id="user">
                <h1 class="text-center login-title">Welcome {{ user.firstName }}. Check your details below:
                    <div class="signup-wall">
                        <ul class="user-details">
                            <li>Username {{ user.username }}</li>
                            <li>Email {{ user.email }}</li>
                            <li>First Name {{ user.firstName }}</li>
                            <li>Last Name {{ user.lastName }}</li>
                        </ul>
                    </div><a href="/signout" class="text-center new-account">Sign Out</a>
                </h1>
            </div>
        </div>
    </div>
</div>